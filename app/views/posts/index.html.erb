<h1> Todas las publicacciones </h1>

<%= link_to "crear nueva publicación", new_post_path %>


<table>
	<thead>
		<tr>	
			<th>Titulo</th>
			<th>Cuerpo</th>
			<th>Autor</th>
			<th>Fecha de creación</th>
			<th>Última modificación</th>
		</tr>
	</thead>

	<tbody>
		<%= @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.body %></td>
				<td><%= post.author %></td>
				<td style="text-align: center,"><%= post.created_at.strftime("%d %b, %y") %></td>
				<td style="text-align: center,"><%= post.updated_at.strftime("%d %b, %y") %></td>
				<td><%= link_to "Editar", edit_post_path(post) %></td>
			</tr>
		<% end %>
	</tbody>
</table>